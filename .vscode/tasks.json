{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Creators.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Creators.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Creators.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-compose up debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
              "-f", "docker-compose.debug.yaml", 
              "up",
              "--build"
            ],
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "isBackground": true,
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "revealProblems": "onProblem",
              "panel": "shared"
            }
        },
        {
            "label": "docker-compose down debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f", "docker-compose.debug.yaml", 
                "down",
            ]
        }
    ]
}